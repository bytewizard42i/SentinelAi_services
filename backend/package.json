{
  "name": "sentinelai-backend",
  "version": "1.0.0",
  "description": "SentinelAI Services Backend - AI DAO Treasury Management",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "start": "bun src/index.js",
    "dev": "bun --watch src/index.js",
    "test": "bun test",
    "compile-contracts": "bun scripts/compile-contracts.js",
    "start:node": "node src/index.js",
    "install:bun": "bun install",
    "install:npm": "npm install",
    "proof:real": "docker compose -f ../docker-compose.profiles.yml --profile real up -d",
    "proof:mock": "docker compose -f ../docker-compose.profiles.yml --profile mock up -d",
    "proof:logs": "docker logs -f midnight-proof 2>/dev/null || docker logs -f mock-proof-server",
    "proof:stop": "docker compose -f ../docker-compose.profiles.yml down",
    "proof:status": "curl -s http://localhost:6300/health | jq . || echo 'No proof server running'"
  },
  "dependencies": {
    "@midnight-ntwrk/compact-runtime": "^0.8.1",
    "@midnight-ntwrk/wallet": "^5.0.0",
    "@midnight-ntwrk/wallet-api": "^5.0.0",
    "@midnight-ntwrk/midnight-js-types": "^2.0.1",
    "@midnight-ntwrk/midnight-js-contracts": "^2.0.1",
    "@midnight-ntwrk/midnight-js-network-id": "^2.0.1",
    "@midnight-ntwrk/midnight-js-http-client-proof-provider": "^2.0.1",
    "@midnight-ntwrk/midnight-js-indexer-public-data-provider": "^2.0.1",
    "@midnight-ntwrk/midnight-js-level-private-state-provider": "^2.0.1",
    "@midnight-ntwrk/midnight-js-node-zk-config-provider": "^2.0.1",
    "@midnight-ntwrk/midnight-js-utils": "^2.0.1",
    "@midnight-ntwrk/ledger": "^4.0.0",
    "@midnight-ntwrk/zswap": "^4.0.0",
    "bip39": "^3.1.0",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "winston": "^3.11.0",
    "axios": "^1.6.2",
    "node-cron": "^3.0.3",
    "ws": "^8.16.0",
    "@modelcontextprotocol/sdk": "^0.4.0",
    "bcrypt": "^5.1.1",
    "jsonwebtoken": "^9.0.2",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
